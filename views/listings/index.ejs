<% layout("/layouts/boilerplate") %>

<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-around;
        border-bottom: 1px solid #ddd;
    }

    .filter {
        text-align: center;
        margin-inline: 1rem;
        margin-top: 1rem;
        opacity: 0.7;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        padding: 0.5rem;
        border-bottom: 2px solid transparent;
    }

    .filter:hover {
        opacity: 1;
        border-bottom: 2px solid #ddd;
    }

    .filter.active {
        opacity: 1;
        border-bottom: 2px solid #000;
    }

    .filter p {
        font-size: 0.8rem;
        margin-bottom: 0;
    }

    .tax-info {
        display: none;
    }

    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
    }

    .results-info {
        padding: 1rem 2rem;
        background: #f0f8ff;
        border-left: 4px solid #FF385C;
        margin: 1rem 0;
    }

    .no-results {
        text-align: center;
        padding: 3rem;
    }

    .category-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: #f7f7f7;
        border-radius: 20px;
        font-size: 0.75rem;
        margin-top: 0.5rem;
    }
</style>


<!-- Category Filters -->
<div id="filters">
    <a href="/listings?category=Trending" class="filter <%= category === 'Trending' ? 'active' : '' %>">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </a>
    <a href="/listings?category=Rooms" class="filter <%= category === 'Rooms' ? 'active' : '' %>">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </a>
    <a href="/listings?category=Iconic cities" class="filter <%= category === 'Iconic cities' ? 'active' : '' %>">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
    </a>
    <a href="/listings?category=Mountains" class="filter <%= category === 'Mountains' ? 'active' : '' %>">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
    </a>
    <a href="/listings?category=Castles" class="filter <%= category === 'Castles' ? 'active' : '' %>">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
    </a>
    <a href="/listings?category=Amazing pools" class="filter <%= category === 'Amazing pools' ? 'active' : '' %>">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
    </a>
    <a href="/listings?category=Camping" class="filter <%= category === 'Camping' ? 'active' : '' %>">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
    </a>
    <a href="/listings?category=Farms" class="filter <%= category === 'Farms' ? 'active' : '' %>">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
    </a>
    <a href="/listings?category=Arctic" class="filter <%= category === 'Arctic' ? 'active' : '' %>">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
    </a>
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>

<!-- Results Info -->
<% if(search || category) { %>
    <div class="container">
        <div class="results-info">
            <strong>Search Results:</strong>
            <% if(search) { %> 
                Showing results for "<%= search %>"
            <% } %>
            <% if(category) { %> 
                in <%= category %> category
            <% } %>
            - <strong><%= allListings.length %></strong> listings found
        </div>
    </div>
<% } %>

<!-- Listings Grid -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% if(allListings.length === 0) { %>
        <div class="col-12 no-results">
            <i class="fa-solid fa-magnifying-glass" style="font-size: 4rem; color: #ddd;"></i>
            <h3 style="margin-top: 1rem;">No listings found</h3>
            <p>Try adjusting your search or browse all listings</p>
            <a href="/listings" class="btn btn-primary mt-3">View All Listings</a>
        </div>
    <% } %>

    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b> <br>
                        <span class="price" data-base-price="<%= listing.price %>">
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>
                        </span>
                        / night
                        <span class="tax-info"></span>
                        <% if(listing.category) { %>
                            <br><span class="category-badge"><%= listing.category %></span>
                        <% } %>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>

<script>
    const taxSwitch = document.getElementById("flexSwitchCheckDefault");
    const prices = document.querySelectorAll(".price");
    const taxInfos = document.querySelectorAll(".tax-info");

    taxSwitch.addEventListener("change", () => {
        prices.forEach((priceEl, index) => {
            const basePrice = Number(priceEl.dataset.basePrice);

            if (taxSwitch.checked) {
                const totalPrice = Math.round(basePrice * 1.18);
                priceEl.innerHTML = `&#8377; ${totalPrice.toLocaleString("en-IN")}`;
                taxInfos[index].innerText = " (incl. 18% GST)";
                taxInfos[index].style.display = "inline";
            } else {
                priceEl.innerHTML = `&#8377; ${basePrice.toLocaleString("en-IN")}`;
                taxInfos[index].style.display = "none";
            }
        });
    });
</script>